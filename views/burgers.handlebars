<div class="container col-xs-12">
		<header class="jumbotron text-center">
			<h1>What's on the menu</h1>
		</header>
		<div class="row">
			<div class="col-xs-12 text-center">
				<h2>Burger Delicatesan</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-4" id="queued">
			{{#each burgers}}
                {{#if this.devoured}}
                {{else}}
                    <h3 data-id="{{this.id}}">{{this.burgerName}}</h3>
					<button id="burger-{{this.id}}" data-id="{{id}}" type="button" class="btn btn-light burger-btn">Smash!</button>
                {{/if}}
            {{/each}}

			</div>
			<div class="col-xs-4">
				<form>
					<div class="form-group">
						<label for="exampleInputEmail1">Burger Name</label>
						<input id="burger-name-input" type="text" class="form-control" placeholder="burger name">
					</div>
					<button id="btn-add-burger" type="input" class="btn btn-primary">Add the burger</button>
				</form>
			</div>
			<div class="col-xs-4" id="devoured">
			{{#each burgers}}
                {{#if this.devoured}}
                    <h3 data-id="{{this.id}}">{{this.burgerName}}</h3>
                {{/if}}
            {{/each}}				
			</div>
		</div>
	</div>